
<h1>
	<%= @article.title %>	
</h1>

<br />

<p>
	<%= label_tag "Category:" %>: <%= @article.category %>
</p>

<br />

<p>
	<%= @article.body %>
</p>

<br />

<p>
	<%= label_tag "Tags: " %><%= @article.tag_list %>
	
</p>

<br />

<%= label_tag "Comments:" %>
<% @article.comments.each do |comment| %>
	
	<p>
		<%= comment.body %>
	</p>

<% end %>

<%= form_for([@article, @article.comments.build]) do |f| %>

  <p>
    <%= f.label "Add a comment" %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to articles", articles_path %>
